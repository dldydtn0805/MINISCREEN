{
  "manifest_version": 3,
  "name": "MINISCREEN",
  "version": "1.0",
  "description": "크롬 화면 위에 보조 모바일 화면을 띄울 수 있다",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "declarativeNetRequest"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_title": "MINISCREEN"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
